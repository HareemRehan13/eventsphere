{
  "info": {
    "name": "EventSphere API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{base}}/"
      }
    },
    {
      "name": "Auth Signup",
      "request": {
        "method": "POST",
        "url": "{{base}}/api/auth/signup",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Hareem\", \"email\": \"hareem@example.com\", \"password\": \"secret123\", \"role\": \"Organizer\"}"
        }
      }
    },
    {
      "name": "Auth Login",
      "request": {
        "method": "POST",
        "url": "{{base}}/api/auth/login",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"hareem@example.com\", \"password\": \"secret123\"}"
        }
      }
    },
    {
      "name": "Create Expo",
      "request": {
        "method": "POST",
        "url": "{{base}}/api/expos",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Tech Expo 2025\", \"description\": \"Largest tech expo\", \"theme\": \"AI/Cloud\", \"dateStart\": \"2025-09-10\", \"dateEnd\": \"2025-09-12\", \"location\": \"Karachi Expo Center\"}"
        }
      }
    },
    {
      "name": "List Expos",
      "request": {
        "method": "GET",
        "url": "{{base}}/api/expos"
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:4000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}